<view class="container">

<view class="login_block">
    <view class="title">
        <text >运营平台</text>
    </view>
    <form bindsubmit="bindSave" bindreset="bindCancel">
    <view class="form-box">
        <view class="row-wrap">
            <view class="label">用户名</view>
            <view class="label-right">
                <input name="username" class="input" type="text" placeholder="请输入用户名"/>
            </view>
        </view>
        <view class="row-wrap">
            <view class="label">密码</view>
            <view class="label-right">
                <input name="password" class="input" password="true" placeholder="请输入密码" />
            </view>
        </view>
 </view>
       
    <button type="primary" class="save-btn" formType="submit">登 录</button>
    
    <button type="default" class="cancel-btn" formType="reset">重 置</button>
    </form>
 </view>
</view>